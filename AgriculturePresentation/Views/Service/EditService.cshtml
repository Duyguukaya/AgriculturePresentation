@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "Hizmet Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Hizmet Güncelleme</h4>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        @Html.HiddenFor(x => x.ServiceId)

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">Başlık</label>
                            <input asp-for="Title" class="form-control" placeholder="Hizmet başlığını girin" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Image" class="form-label fw-semibold">Görsel Yolu</label>
                            <input asp-for="Image" class="form-control" placeholder="Örnek: /images/service1.jpg" />
                            <span asp-validation-for="Image" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Hizmet açıklamasını girin"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary text-white px-4 py-2 fw-semibold">
                                <i class="bi bi-save me-2"></i> Değişiklikleri Kaydet
                            </button>
                            <a href="/Service/Index" class="btn btn-outline-secondary px-4 py-2 ms-2">
                                <i class="bi bi-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
