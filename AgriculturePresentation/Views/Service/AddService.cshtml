@model AgriculturePresentation.Models.ServiceAddViewModel
@{
    ViewData["Title"] = "AddService";
}

<h1>Yeni Hizmet Girişi</h1>

<form method="post">
    <div class="form-group">
    @Html.Label("Başlık")
    <span asp-validation-for="Title" class="text-danger"></span>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    @Html.Label("Görsel Yolu")
        <span asp-validation-for="Image" class="text-danger"></span>
    <input type="text" asp-for="Image" class="form-control" />
    <br />
    @Html.Label("Açıklama")
        <span asp-validation-for="Description" class="text-danger"></span>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    </div>
    <button class="btn btn-outline-info">Kaydet</button>
</form>
