@*
    _DashboardOverwievPartial
*@


<div class="container-fluid">
	<div class="row">
		<div class="col-md-12 grid-margin stretch-card">
			<div class="card w-100">
				<div class="card-body dashboard-tabs p-0">
					<ul class="nav nav-tabs px-4" role="tablist">
						<li class="nav-item">
							<a class="nav-link active" id="overview-tab" data-bs-toggle="tab" href="#overview" role="tab" aria-controls="overview" aria-selected="true">İstatistik 1</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" id="sales-tab" data-bs-toggle="tab" href="#sales" role="tab" aria-controls="sales" aria-selected="false">İstatistik 2</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" id="purchases-tab" data-bs-toggle="tab" href="#purchases" role="tab" aria-controls="purchases" aria-selected="false">Ekip Arkadaşlarımız</a>
						</li>
					</ul>

					<div class="tab-content py-0 px-0">
						<!-- Overview -->
						<div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
							<div class="d-flex flex-wrap justify-content-xl-between">
								<!-- Tarih -->
								<div class="d-none d-xl-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-calendar-month icon-lg me-3 text-primary"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Tarih</small>
										<div class="dropdown">

											<h5 class="mb-0 d-inline-block">@DateTime.Now.ToShortDateString()</h5>

										</div>
									</div>
								</div>

								<!-- Çalışan Sayısı -->
								<div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-account-group icon-lg me-3 text-info"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Çalışan Sayısı</small>
										<h5 class="me-2 mb-0">@ViewBag.teamCount</h5>
									</div>
								</div>

								<!-- Hizmet Sayısı -->
								<div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-briefcase-check icon-lg me-3 text-success"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Hizmet Sayısı</small>
										<h5 class="me-2 mb-0">@ViewBag.serviceCount</h5>
									</div>
								</div>

								<!-- Gelen Mesajlar -->
								<div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-email-outline icon-lg me-3 text-warning"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Gelen Mesajlar</small>
										<h5 class="me-2 mb-0">@ViewBag.messageCount</h5>
									</div>
								</div>

								<!-- Ayın Mesajları -->
								<div class="d-flex py-3 border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-message-text-outline icon-lg me-3 text-danger"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">@DateTime.Now.ToString("MMMM", new System.Globalization.CultureInfo("tr-TR")) Mesajları</small>
										<h5 class="me-2 mb-0">@ViewBag.currentMonthMessage</h5>
									</div>
								</div>
							</div>
						</div>


						<!-- Sales -->
						<div class="tab-pane fade" id="sales" role="tabpanel" aria-labelledby="sales-tab">
							<div class="d-flex flex-wrap justify-content-xl-between">

								<!-- Aktif Duyurular -->
								<div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-bullhorn-outline me-3 icon-lg text-warning"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Aktif Duyurular</small>
										<h5 class="me-2 mb-0">@ViewBag.announcementTrue</h5>
									</div>
								</div>

								<!-- Pasif Duyurular -->
								<div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-bell-off-outline me-3 icon-lg text-secondary"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Pasif Duyurular</small>
										<h5 class="me-2 mb-0">@ViewBag.announcementFalse</h5>
									</div>
								</div>

								<!-- Toplam Görsel -->
								<div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-image-multiple me-3 icon-lg text-success"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Toplam Görsel</small>
										<h5 class="me-2 mb-0">@ViewBag.totalImage</h5>
									</div>
								</div>

								<!-- Toplam Admin -->
								<div class="d-flex py-3 border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-account-tie me-3 icon-lg text-danger"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Toplam Admin</small>
										<h5 class="me-2 mb-0">@ViewBag.totalAdmin</h5>
									</div>
								</div>

							</div>
						</div>


						<!-- Purchases -->
						<div class="tab-pane fade" id="purchases" role="tabpanel" aria-labelledby="purchases-tab">
							<div class="d-flex flex-wrap justify-content-xl-between">

								<!-- Bakliyat Yönetimi -->
								<div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-food-apple-outline me-3 icon-lg text-warning"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Bakliyat Yönetimi</small>
										<h5 class="me-2 mb-0">@ViewBag.bakliyatYonetimi</h5>
									</div>
								</div>

								<!-- Ürün Pazarlama -->
								<div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-sale me-3 icon-lg text-success"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Ürün Pazarlama</small>
										<h5 class="me-2 mb-0">@ViewBag.urunPazarlama</h5>
									</div>
								</div>

								<!-- Hasat Sorumlusu -->
								<div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-truck-fast me-3 icon-lg text-primary"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Hasat Sorumlusu</small>
										<h5 class="me-2 mb-0">@ViewBag.hasatSorumlusu</h5>
									</div>
								</div>

								<!-- Süt Ürünleri Üreticisi -->
								<div class="d-flex py-3 border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
									<i class="mdi mdi-cow me-3 icon-lg text-danger"></i>
									<div class="d-flex flex-column justify-content-around">
										<small class="mb-1 text-muted">Süt Ürünleri Üreticisi</small>
										<h5 class="me-2 mb-0">@ViewBag.sutUreticisi</h5>
									</div>
								</div>

							</div>
						</div>

					</div><!-- tab-content -->
				</div><!-- card-body -->
			</div><!-- card -->
		</div><!-- col -->
	</div><!-- row -->
</div><!-- container-fluid -->
