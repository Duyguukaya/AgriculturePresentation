@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    var count = 0;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-image-fill me-2"></i>Yeni Resim Listesi</h4>
            <a href="/Image/AddImage/" class="btn btn-light fw-semibold">
                <i class="bi bi-plus-circle me-1"></i> Yeni Resim Ekle
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" style="width:5%">#</th>
                            <th scope="col" style="width:20%">Başlık</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col" style="width:20%" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td class="fw-semibold">@item.Title</td>
                                <td>@item.Description</td>
                                <td class="text-center">
                                    <a href="/Image/EditImage/@item.ImageId" class="btn btn-outline-primary btn-sm me-2">
                                        <i class="bi bi-pencil-square"></i> Güncelle
                                    </a>
                                    <a href="/Image/DeleteImage/@item.ImageId" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash3"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


