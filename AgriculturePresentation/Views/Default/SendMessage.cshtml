@model EntityLayer.Concrete.Contact

@*
    _ContactPartial
*@

<div class="col-md-9 contact-middle">
	<h2>Mesaj Formu</h2>
	@using(Html.BeginForm("SendMessage","Default",FormMethod.Post)){
		<div class="form-agileinfo">
			<p>Ad Soyad</p>
			<input type="text" placeholder="ad saoyad" asp-for="Name" required="" />
			<p>E-Mail</p>
			<input type="email" placeholder="Mail" asp-for="Mail" required="" />
		</div>
		<div class="form-agileits-w3layouts">
			<p>Mesaj</p>
			<textarea placeholder="mesajınız..." asp-for="Message" required=""></textarea>
			<input type="submit" value="MESAJI GÖNDER">
		</div>
		<div class="clearfix"></div>
	}
</div>