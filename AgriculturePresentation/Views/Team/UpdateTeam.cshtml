@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Personel Güncelleme</h4>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        @Html.HiddenFor(x => x.TeamId)

                        <div class="mb-3">
                            <label asp-for="PersonName" class="form-label fw-semibold">Adı Soyadı</label>
                            <input asp-for="PersonName" class="form-control" placeholder="Ad soyad girin" />
                            <span asp-validation-for="PersonName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">Görev</label>
                            <input asp-for="Title" class="form-control" placeholder="Görev girin" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label fw-semibold">Görsel Yolu</label>
                            <textarea asp-for="ImageUrl" class="form-control" placeholder="Görsel yolunu girin"></textarea>
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LinkedinUrl" class="form-label fw-semibold">Linkedin</label>
                            <textarea asp-for="LinkedinUrl" class="form-control" placeholder="Linkedin url'yi girin"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="InstagramUrl" class="form-label fw-semibold">Instagram</label>
                            <textarea asp-for="InstagramUrl" class="form-control" placeholder="Instagram url'yi girin"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="WebSiteUrl" class="form-label fw-semibold">WebSite</label>
                            <textarea asp-for="WebSiteUrl" class="form-control" placeholder="WebSite url'yi girin"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TwitterUrl" class="form-label fw-semibold">Twitter</label>
                            <textarea asp-for="TwitterUrl" class="form-control" placeholder="Twitter url'yi girin"></textarea>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary text-white px-4 py-2 fw-semibold">
                                <i class="bi bi-save me-2"></i> Değişiklikleri Kaydet
                            </button>
                            <a href="/Team/Index" class="btn btn-outline-secondary px-4 py-2 ms-2">
                                <i class="bi bi-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

