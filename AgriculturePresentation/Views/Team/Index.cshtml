@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Listesi</h4>

            <div class="table-responsive">
                @if (Model == null || !Model.Any())
                {
                    <div class="alert alert-warning text-center fw-semibold" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i> Hiç personel bulunamadı!
                    </div>
                }
                else
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Görsel</th>
                                <th>#</th>
                                <th>Ad Soyad</th>
                                <th>Görev</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">
                                        <img src="~/majestic-master/images/faces/face1.jpg" alt="image" />
                                    </td>
                                    <td>@count</td>
                                    <td>@item.PersonName</td>
                                    <td>@item.Title</td>
                                    <td class="text-center">
                                        <a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-primary btn-sm me-2">
                                            <i class="bi bi-pencil-square"></i> Güncelle
                                        </a>
                                        <a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash3"></i> Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="/Team/AddTeam/" class="btn btn-light fw-semibold">
        <i class="bi bi-plus-circle me-1"></i> Yeni Personel Ekle
    </a>
</div>
