@model AgriculturePresentation.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Profil Düzenleme Sayfası</h4>
                </div>

                <div class="card-body p-4">
                    <form method="post">

                        <div class="mb-3">
                            <label asp-for="Mail" class="form-label fw-semibold">Mail Adresi</label>
                            <input asp-for="Mail" class="form-control" placeholder="mail adresinizi girin" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold">Telefon Numarası</label>
                            <input asp-for="Phone" class="form-control" rows="4" placeholder="Telefon numarasını girin"/>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">Şifre</label>
                            <input asp-for="Password" class="form-control" placeholder="şifre giriniz" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">Şifre Tekrar</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="şifre giriniz" />
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary text-white px-4 py-2 fw-semibold">
                                <i class="bi bi-save me-2"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



