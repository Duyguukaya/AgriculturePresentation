@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>İletişim Detay</h4>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        @Html.HiddenFor(x => x.ContactId)

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Adı Soyadı</label>
                            <input asp-for="Name" class="form-control"  />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Mail" class="form-label fw-semibold">Mail Adresi</label>
                            <input asp-for="Mail" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Message" class="form-label fw-semibold">Mesaj</label>
                            <textarea asp-for="Message" class="form-control" rows="10" ></textarea>
                        </div>

                        <div class="text-center mt-4">
                            <a href="/Contact/Index" class="btn btn-outline-secondary px-4 py-2 ms-2">
                                <i class="bi bi-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
