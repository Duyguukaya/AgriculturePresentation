@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    var count = 0;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center rounded-top-4">
            <!-- Basit başlık -->
            <h4 class="mb-0 d-flex align-items-center">
                <i class="bi bi-telephone-fill me-2 fs-5" aria-hidden="true"></i>
                İletişim Bilgileri
            </h4>

        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" style="width:5%">#</th>
                            <th scope="col">Ad Soyad</th>
                            <th scope="col">Mail Adresi</th>
                            <th scope="col">Tarih</th>
                            <th scope="col" style="width:20%" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@item.Mail</td>
                                <td>@item.Date</td>
                                <td class="text-center">
                                    <a href="/Contact/MessageDetails/@item.ContactId" class="btn btn-outline-primary btn-sm me-2">
                                        <i class="bi bi-pencil-square"></i> Mesajı Gör
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


