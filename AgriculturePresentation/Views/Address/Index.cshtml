@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    var count = 0;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-geo-alt-fill me-2 text-primary"></i>Adres Listesi</h4>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" style="width:5%">#</th>
                            <th scope="col">Adres 1</th>
                            <th scope="col">Adres 2</th>
                            <th scope="col">Adres 3</th>
                            <th scope="col">Adres 4</th>
                            <th scope="col">Harita Bilgisi</th>
                            <th scope="col" style="width:20%" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Description1</td>
                                <td>@item.Description2</td>
                                <td>@item.Description3</td>
                                <td>@item.Description4</td>
                                <td>@item.MapInfo</td>
                                <td class="text-center">
                                    <a href="/Address/EditAddress/@item.AddressId" class="btn btn-outline-primary btn-sm me-2">
                                        <i class="bi bi-pencil-square"></i> Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


